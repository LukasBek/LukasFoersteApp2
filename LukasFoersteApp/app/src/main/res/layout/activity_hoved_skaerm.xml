<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hoved_skaerm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lukas.lukasfoersteapp.HovedSkaerm">

    <Button
        android:text="Indstillinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/indstillinger"
        android:layout_alignBaseline="@+id/vejledning"
        android:layout_alignBottom="@+id/vejledning"
        android:layout_alignParentEnd="true" />


    <TextView
        android:text="En overskrift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/overskrift"
        android:textStyle="normal|italic"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Vejledning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vejledning"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/overskrift"
        android:layout_marginBottom="161dp" />

    <TextView
        android:text="Denne tekst vil ændre sig, ved et simpelt tryk på en knap - MAGI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:id="@+id/tekstSomÆndrerSig"
        android:textSize="18sp"
        android:textStyle="normal|italic"
        android:layout_above="@+id/indstillinger"
        android:layout_alignStart="@+id/vejledning"
        android:layout_marginBottom="89dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView"
        android:scaleType="fitXY"
        android:adjustViewBounds="false"
        android:cropToPadding="false"

        android:layout_below="@+id/overskrift"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:text="Opgave 2+3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overskrift"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <Button
        android:text="Til opgave 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/next" />

</RelativeLayout>
